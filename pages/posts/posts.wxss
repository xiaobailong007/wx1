swiper {
  width: 100%;
  height: 460rpx
}

swiper image {
  width: 100%;
  height: 460rpx
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #ffffff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}

.post-author-date {
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author {
  width: 60rpx;
  height: 60rpx;
  /* vertical-align: middle; */
}

.post-date {
  margin-left: 20rpx;
  font-size: 26rpx;
  /* vertical-align: middle; */
}

.post-title{
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image{
  width: 100%;
  height: 340rpx;
  margin-bottom: 10rpx;
}

.post-content{
  color: #666666;
  font-size: 28rpx;
  margin-bottom: 20px;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  align-items: center;
}

.post-like-image{
  margin-right: 16rpx;
}

.post-like-font{
  margin-right: 40rpx;
  font-size: 26rpx;
}