<view>
  <swiper interval="3000" circular="" indicator-dots="true" autoplay="true">
    <swiper-item>
      <image src="/images/bestplayers.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/bestplayers.png"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/bestplayers.png"></image>
    </swiper-item>
  </swiper>
<block wx:for="{{postList}}" wx:for-item="item" wx:key="index">
  <view class="post-container" bind:tap="onGoToDetail" data-post-id="{{item.postId}}">
    <view class="post-author-date">
      <image catch:tap="onMaxImage" class="post-author" src="{{item.avatar}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.imgSrc}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <l-icon class="post-like-image" size="32" color="#666" name="favor"></l-icon>
        <text class="post-like-font">{{item.collection}}</text>
        <l-icon class="post-like-image" size="32" color="#666" name="eye"></l-icon>
        <text class="post-like-font">{{item.reading}}</text>
      </view>
    </view>
  </view>
</block>
</view>